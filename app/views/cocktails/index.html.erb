<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_url "cool_bar.jpeg" %>');">
  <div class="banner-content">
    <h1>The Hub</h1>
    <p>A Deep Dove Into Shanghai's Secret Mixes</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <p><%= cocktail.name %></p>
            <a><%= link_to 'Show', cocktail %></a>
            <p>Very cool city, the best</p>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>
>
<br>
<%= link_to 'New Cocktail', new_cocktail_path %>